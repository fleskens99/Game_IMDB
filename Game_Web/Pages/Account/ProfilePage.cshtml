@page
@model Game_Web.Pages.Account.ProfilePageModel
@{
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="~/css/Profile.css" />

<div class="Acc-wrap">
    <div class="Acc-hero">
        <div class="Acc-heroCard">
            <img class="Acc-avatar" src="@Url.Page("/Account/ProfileImage")" alt="Profile picture" />

            <div class="Acc-heroInfo">
                <div class="Acc-name">@Model.DisplayName</div>

                <form method="post" asp-page-handler="Logout">
                    <button type="submit" class="Log-Out-Btn">Log out</button>
                </form>
            </div>
        </div>
    </div>

    <div class="Acc-grid">
        <section class="Acc-card Acc-cardFull">
            <div class="Acc-cardHeader">
                <div class="Acc-cardTitle">Your information</div>
            </div>

            <div class="Acc-rows">
                <div class="Acc-row">
                    <div class="Acc-label">Name</div>
                    <div class="Acc-value">@Model.DisplayName</div>
                </div>

                <div class="Acc-row">
                    <div class="Acc-label">Email</div>
                    <div class="Acc-value">@Model.Email</div>
                </div>
            </div>
            <input type="checkbox" id="PwEdit" class="Acc-toggle" />

            <label for="PwEdit" class="Acc-row Acc-rowClickable">
                <div class="Acc-value Acc-actionText">Change password</div>
            </label>

            <div class="Acc-passBlock">
                <form method="post" asp-page-handler="ChangePassword" class="Acc-passForm">
                    <div class="Acc-row">
                        <label class="Acc-label" for="OldPassword">Old password</label>
                        <input id="OldPassword" class="Acc-passInput" type="password" asp-for="OldPassword" required />
                    </div>

                    <div class="Acc-row">
                        <label class="Acc-label" for="NewPassword">New password</label>
                        <input id="NewPassword" class="Acc-passInput" type="password" asp-for="NewPassword" required />
                    </div>

                    <div class="Acc-passActions">
                        <button type="submit" class="Acc-saveBtn">Save</button>
                        <label for="PwEdit" class="Acc-cancelBtn" tabindex="0">Cancel</label>
                    </div>

                    <div class="Acc-validation" asp-validation-summary="All"></div>
                </form>
            </div>


        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
