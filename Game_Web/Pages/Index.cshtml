@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/Index.css" />

<div class="rankings-layout">
    <div class="main-content">
        <h2 class="section-title">Latest Game Rankings</h2>

        @if (Model.Games != null && Model.Games.Count > 0)
        {
            <div class="games-grid">
                @foreach (var game in Model.Games)
                {
                    <article class="game-card">
                        <div class="preview" aria-hidden="true">
                            @if (game.Picture != null && game.Picture.Length > 0)
                            {
                                <img src="/Index?handler=Image&id=@game.Id" alt="Game Cover" />
                            }
                            else
                            {
                                <div class="preview-placeholder">
                                    <span class="badge">No image</span>
                                </div>
                            }
                        </div>

                        <div class="card-body">
                            <div class="card-title">@game.Name</div>
                            <div class="card-meta">
                                <span class="badge">@game.Category</span>
                            </div>

                            <p class="card-desc">@game.Description</p>

                            <div class="row" style="margin-top:.6rem;">
                                <a asp-page="/Details" asp-route-id="@game.Id" class="btn">Details</a>
                            </div>
                        </div>
                    </article>
                }
            </div>
        }
        else
        {
            <p class="hint">No games found.</p>
        }
    </div>

    <div class="sidebar">
    </div>
</div>