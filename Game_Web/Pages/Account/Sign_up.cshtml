@page
@model Game_Web.Pages.Account.Sign_UpModel
@{
    Layout = null;
    ViewData["Title"] = "Sign up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Sign_Up.css" />
</head>

<body class="login-page">

    <div class="login-layout">
        <div class="brand">
            <img src="~/uploads/Pictures/Controller.png" class="brand-logo" alt="Logo" />
            <span class="brand-name">GameIMDB</span>
        </div>

        <section class="login-card">
            <h2 class="login-title">Sign up</h2>

            <form method="post" class="login-form">
                <div asp-validation-summary="All"></div>

                <div class="field">
                    <label class="field-label" asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control field-input" placeholder="Enter your name" />
                    <span asp-validation-for="Input.Name"></span>
                </div>

                <div class="field">
                    <label class="field-label" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control field-input" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email"></span>
                </div>

                <div class="field">
                    <label class="field-label" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" type="password" class="form-control field-input" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password"></span>
                </div>

                <button type="submit" class="btn-login">Sign up</button>
            </form>
            <div asp-validation-summary="All"></div>

        </section>

        <div class="back-row">
            <a class="back-link" asp-page="/Index">
                <span class="back-arrow" aria-hidden="true">←</span>
                Back
            </a>
        </div>
    </div>

</body>
</html>
