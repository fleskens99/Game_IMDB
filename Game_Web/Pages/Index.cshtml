@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/Index.css" />

<div class="rankings-layout">
    <div class="main-content">
        <h2 class="section-title">All Games</h2>

        @if (Model.Games != null && Model.Games.Count > 0)
        {
            <div class="games-grid">
                @foreach (var game in Model.Games)
                {
                    <article class="game-card">
                        <a asp-page="/Details" asp-route-id="@game.Id" class="game-card-link">
                            <div class="preview" aria-hidden="true">
                                @if (game.Picture != null && game.Picture.Length > 0)
                                {
                                    <img src="/Index?handler=Image&id=@game.Id" alt="@game.Name cover" />
                                }
                                else
                                {
                                    <div class="preview-placeholder">No image</div>
                                }
                            </div>

                            <div class="card-info">
                                <div class="title-row">
                                    <div class="card-title">@game.Name</div>
                                <div class="card-rating"> @game.AverageRating </div>
                                </div>

                                <div class="card-category">@game.Category</div>
                            </div>
                        </a>
                    </article>

                }
            </div>
        }
        else
        {
            <p class="hint">No games found.</p>
        }
    </div>

    <div class="sidebar">
    </div>
</div>